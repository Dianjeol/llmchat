{
  "name": "llmchat",
  "version": "1.0.0",
  "description": "LLM Chat Application",
  "author": {
    "name": "dianjeol",
    "email": "dianjeol@users.noreply.github.com"
  },
  "license": "0BSD",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build-web": "expo export --platform web",
    "build-electron": "npm run build-web && electron-builder --publish=never",
    "build-appimage": "npm run build-web && electron-builder --linux appimage --publish=never",
    "dist": "npm run build-web && electron-builder --publish=never"
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.1",
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "axios": "*",
    "electron-is-dev": "^3.0.1",
    "expo": "~52.0.26",
    "expo-image-picker": "~16.0.4",
    "expo-status-bar": "~2.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "^0.76.9",
    "react-native-paper": "4.9.2",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12"
  },
  "private": true,
  "build": {
    "appId": "com.llmchat.app",
    "productName": "LLM Chat",
    "directories": {
      "buildResources": "build-resources",
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  }
}
